<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="true" default-access="property" default-cascade="none" default-lazy="true">
    <class catalog="javadb" dynamic-insert="false" dynamic-update="false" mutable="true" name="model.Answer" optimistic-lock="version" polymorphism="implicit" select-before-update="false" table="answer">
        <id name="aid" type="int">
            <column name="aid"/>
            <generator class="increment"/>
        </id>
        <many-to-one class="model.Question" embed-xml="true" fetch="select" insert="true" name="question" not-found="exception" optimistic-lock="true" unique="false" update="true">
            <column name="qid" not-null="true"/>
        </many-to-one>
        <property generated="never" lazy="false" name="answername" optimistic-lock="true" type="string" unique="false">
            <column length="80" name="answername" not-null="true"/>
        </property>
        <property generated="never" lazy="false" name="postedby" optimistic-lock="true" type="string" unique="false">
            <column length="80" name="postedby" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>
